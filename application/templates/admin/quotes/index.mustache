<h2>Quotes <small>index</small></h2>

{{#flash}}
<div class="alert alert-{{type}}">
	<a class="close" data-dismiss="alert" href="#">&times;</a>
	{{message}}
</div>
{{/flash}}

<p>
	<a href="{{url.create}}" class="btn btn-primary btn-create">Add new quote</a>
</p>

<table id="quote-index" class="table">
	<thead>
		<tr>
			<th class="column-optional">#</th>
			<th>Body</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		{{#quotes}}
		<tr>
			<td class="column-optional">{{id}}</td>
			<td title="{{&body}}">{{&body}}</td>
			<td>
				<a href="{{url.update}}" class="btn btn-action" data-label="Update"><span class="icon-edit">Update</span></a>
				<a href="{{url.destroy}}" class="btn btn-action" data-label="Delete"><span class="icon-remove">Delete</span></a>
			</td>
		</tr>
		{{/quotes}}
	</tbody>
</table>
