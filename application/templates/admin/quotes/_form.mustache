<form action="{{url.current}}" method="post" accept-charset="utf-8" class="form-horizontal" enctype="multipart/form-data">
	<fieldset>
		{{#has_errors}}
		<div class="alert alert-error fade in">
			<a class="close" data-dismiss="alert" href="#">&times;</a>
			Found errors in form.
		</div>
		{{/has_errors}}

		<input type="hidden" id="input-id" name="id" value="{{quote.id}}" />
		<input type="hidden" name="csfr" value="{{security.token}}" />

		<div class="control-group{{#error.body}} error{{/error.body}}">
			<label class="control-label" for="input-body">Body</label>
			<div class="controls">
				<textarea name="body" required id="input-body" cols="50" rows="3" class="span7">{{quote.body}}</textarea>
				<span class="help-inline">{{error.body}}</span>
			</div>
		</div>

		<div class="form-actions">
			<button class="btn btn-primary">Save</button>
			<a href="{{url.cancel}}" class="btn">Cancel</a>
		</div>
	</fieldset>
</form>

